<!DOCTYPE html>
<html
    itemscope
    itemtype="http://schema.org/WebPage"
    {{ html_class( 'no-js no-touch is-loading is-ontop' ) }}
    {{ site.language_attributes }}
>

	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=5,viewport-fit=cover">
		<meta name="format-detection" content="telephone=no">

		{{ function( 'wp_head' ) }}

	</head>

	<body>

		<div id="{{ post.id ? "page-#{post.id}" : 'page' }}" {{ body_class( 'page-content' ) }}>

			{% block header %}
				{{- include( 'header.html.twig', { classes: [] } ) -}}
			{% endblock %}

			{%- block content -%}
				<main>
					CONTENT

					{{ icon( 'arrow-down' ) }}
					{{ icon( 'arrow-up-left' ) }}
					{{ icon( 'arrow-up-right' ) }}
					{{ icon( 'bars' ) }}

					<img src="{{ asset( 'src/img/svg/branding.svg' ) }}" alt="">
					<img src="{{ asset( 'src/img/svg/dauxui.svg' ) }}" alt="">
					<img src="{{ asset( 'src/img/svg/illustration.svg' ) }}" alt="">
					<img src="{{ asset( 'src/img/svg/mouth.svg' ) }}" alt="">
					<img src="{{ asset( 'src/img/svg/productdesign.svg' ) }}" alt="">

					<c-add cid="myAddComponentId" class="c-add" value="0" log></c-add>
				</main>
			{%- endblock -%}


			{% block footer %}
				{{- include( 'footer.html.twig' ) -}}
			{%- endblock -%}

		</div>


		{{- function( 'wp_footer' ) -}}

		<div id="svg-sprite" style="display: none;">{{- include( 'sprite.svg', ignore_missing = true ) -}}</div>

	</body>

</html>
