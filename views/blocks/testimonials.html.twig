{%- if block.items -%}
	<div class="{{ html_classes( 'py-10 xl:py-20' ) }}">
		{%- if block.title -%}
			<div class="container mb-6 xl:mb-10">
				{{- block.title ? '<h2 class="h2 text-center">' ~ block.title ~ '</h2>' : '' -}}
			</div>
		{%- endif -%}

		<div class="container">
			{% for item in block.items %}
				<div class="{{ html_classes( loop.first ? '': 'mt-6', 'bg-brand-beige p-10 rounded-[1.25rem] space-y-6 xl:sticky xl:top-28' ) }}">
					<div class="flex gap-4">
						<div class="text-[7.5rem] leading-[4.5625rem] font-serif">
							â€œ
						</div>
						<div>
							<p class="display-1">{{ item.title }}</p>
							<p class="text-medium"><strong>{{ item.position }}</strong></p>
						</div>
					</div>
					<div class="mt-2 xl:mt-0 xl:col-span-17 text-medium">{{ item.content }}</div>
				</div>
			{% endfor %}
		</div>

		{% if block.link.url %}
			<div class="container text-center mt-10">
				<a class="button button-neutral-900" href="{{ block.link.url }}" {{ block.link.target ? 'rel="noopener noreferer" target="_blank"' }}>
					{{ block.link.title }}
				</a>
			</div>
		{% endif %}
	</div>
{%- endif -%}
