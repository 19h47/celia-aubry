{#
 # Blocks: Case Studies List
 #}

{% set args = {
	post_type: 'case_study',
	posts_per_page: -1,
	posts__in: block.case_studies,
	orderby: 'posts__in',
} %}

<div class="py-10 xl:py-20 bg-neutral-900 text-white space-y-6 xl:space-y-10">

	{%- if block.title -%}
		<div class="container">
			<h2 class="h3">{{- block.title -}}</h2>
		</div>
	{%- endif -%}

	<div>
		{{- include( 'components/collection-case-study.html.twig', { posts: get_posts( args ) } ) -}}
	</div>

	<div class="container text-center">
		<a href="{{ fn( 'get_post_type_archive_link', 'case_study' ) }}" class="button">{{- __( 'See all case studies', 'celia-aubry' ) -}}</a>
	</div>
</div>
