{#
 # Blocks: Key Figures
 #}

<div class="{{ html_classes( 'py-10 xl:py-20 space-y-10' ) }}">
	<div class="container">
		<h2 class="h2">{{- block.title -}}</h2>
	</div>

	<div class="container grid grid-cols-3 gap-x-4 gap-y-6 text-center">
		{%- for key_figure in block.key_figures -%}
			<div class="col-span-1">
				<h3 class="display-2">{{- key_figure.key_figure -}}</h3>
				<p class="mt-2 text-medium">{{- key_figure.content -}}</p>
			</div>
		{%- endfor -%}
	</div>
</div>
