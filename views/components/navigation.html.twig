{#
 # Navigation
 #}

<div class="{{ html_classes( classes | default( [] ) | join( ' ' ) ) | trim }}">
	<div class="container">
		{%- if title -%}
			<hr class="xl:hidden bg-neutral-900 border-none w-full h-px">
			<h2 class="h3 text-center mt-14 mb-10 xl:hidden">{{- title -}}</h2>
		{%- endif -%}

		<div class="flex flex-col xl:flex-row items-center gap-14 xl:justify-between text-large  text-neutral-900 xl:text-neutral-400">
			{%- if previous -%}
				<a
					href="{{ previous.link }}"
					class="{{ html_classes(
						'inline-flex gap-4 items-center w-min xl:w-auto xl:transition-colors xl:ease-in-out xl:duration-300 xl:hover:text-neutral-900',
					) }}"
				>
					<span class="shrink-0 overflow-hidden">
						{{- icon( 'arrow-up-left', { classes: [ 'size-6' ] } ) -}}
					</span>
					{{- previous.title -}}
				</a>
			{%- endif -%}

			{%- if next -%}
				<a
					href="{{ next.link }}"
					class="{{ html_classes(
						'inline-flex gap-4 items-center w-min xl:w-auto xl:transition-colors xl:ease-in-out xl:duration-300 xl:hover:text-neutral-900',
					) }}"
				>
					{{- next.title -}}
					<span class="shrink-0 overflow-hidden">
						{{- icon( 'arrow-up-right', { classes: [ 'size-6' ] } ) -}}
					</span>
				</a>
			{%- endif -%}
		</div>
	</div>
</div>
